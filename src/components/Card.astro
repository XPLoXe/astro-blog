export interface Props {
  dark?: boolean;
  text?: string;
}

//const { title, body, dark = false } = Astro.props as Props;
const { dark = false, text = "" } = Astro.props as Props;
---

<div class={`card ${dark && "dark"}`}>
  <slot>{text}</slot>
</div>

<style>
  .card {
    background: #fff;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 5px 5px 10px 10px rgba(117, 0, 163, 0.171);
    margin-bottom: 20px;
  }

  .dark {
    background: var(--color-primary);
    color: white;
  }
</style>
