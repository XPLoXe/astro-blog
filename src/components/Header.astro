---
import { fade, slide } from "astro:transitions";
import logo from "../images/monkey-business.png";
import icon from "../images/icon-monkey.png";
import { Image } from "astro:assets";
---

<div class="bg-primary">
  <!-- Nav container  -->
  <nav class="container relative mx-auto">
    <!-- Nav Bar  -->
    <div
      class="flex flex-col items-center justify-between p-10 mt-4 space-y-8 xl:space-x-12 xl:space-y-0 xl:flex-row"
    >
      <!-- Logos -->
      <div
        class="flex flex-col items-center justify-center sm:space-x-4 sm:flex-row"
      >
        <a href="index.html">
          <Image class="w-20 h-20" alt="icon-monkey" src={icon} />
        </a>
        <a href="index.html">
          <Image class="" alt="logo-title" src={logo} />
        </a>
      </div>

      <!-- Links  -->
      <div
        class="flex flex-row items-center justify-between space-x-6 font-bold text-center transition text-terciary"
      >
        <a href="/" class="nav-btn"> Home</a>

        <!-- Games Tab  -->
        <div class="relative py-1 outline-none group" tabindex="1">
          <div
            id="tools"
            class="flex items-center justify-between px-4 py-2 space-x-2 transition duration-500 border rounded-full cursor-pointer group group-hover:scale-110 ease group-hover:bg-gray-50"
          >
            <div class="">Games</div>
            <!-- Arrow -->
            <div class="transition duration-500 group-hover:-rotate-180">
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="12">
                <path
                  fill="none"
                  stroke="currentColor"
                  stroke-width="3"
                  d="M1 1l8 8 8-8"></path>
              </svg>
            </div>
          </div>
          <!-- Tab Inner Content -->
          <div
            class="absolute z-10 flex flex-col w-48 space-y-8 overflow-hidden transition duration-500 bg-primary opacity-95 top-12 max-h-0 text-terciary group-hover:max-h-screen group-hover:p-6"
          >
            <a
              href="/game?search=https://64e50a20839a9019d51bb911--delicate-belekoy-4e9031.netlify.app/"
              class="w-auto p-3 duration-200 border-b-0 border-secondary hover:border-b-2 hover:scale-110"
              >Balls of Steel</a
            >
            <a
              href="/game?search=https://64e88ff4dd8a1c0a6a4fb402--wondrous-cajeta-945cf0.netlify.app/"
              class="p-3 duration-200 border-b-0 hover:border-b-2 hover:scale-110 border-secondary"
              >Clicky Crates</a
            >
          </div>
        </div>

        <!-- Tools Tab  -->
        <div class="relative py-1 outline-none group" tabindex="1">
          <div
            id="tools"
            class="flex items-center justify-between px-4 py-2 space-x-2 transition duration-500 border rounded-full cursor-pointer group group-hover:scale-110 ease group-hover:bg-gray-50"
          >
            <div class="">Tools</div>
            <!-- Arrow -->
            <div
              class="transition duration-500 ease group-focus:-rotate-180 group-focus:text-purple-500"
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="12">
                <path
                  fill="none"
                  stroke="currentColor"
                  stroke-width="3"
                  d="M1 1l8 8 8-8"></path>
              </svg>
            </div>
          </div>
          <!-- Tab Inner Content -->
          <div
            class="absolute z-10 flex flex-col w-48 space-y-8 overflow-hidden font-bold transition duration-500 bg-primary opacity-95 top-12 max-h-0 text-terciary group-hover:max-h-screen group-hover:p-6"
          >
            <a
              href="/to-do-list"
              class="w-auto p-3 duration-200 border-b-0 border-secondary hover:border-b-2 hover:scale-110"
              >To Do List</a
            >
            <a
              href="/habit-tracker"
              class="p-3 duration-200 border-b-0 hover:border-b-2 hover:scale-110 border-secondary"
              >Habit Tracker</a
            >
            <a
              href="/weather-app"
              target="_parent"
              class="p-3 duration-200 border-b-0 hover:border-b-2 hover:scale-110 border-secondary"
              >Weather App</a
            >
            <a
              href="/about#YouTubeProfile"
              class="p-3 duration-200 border-b-0 hover:border-b-2 hover:scale-110 border-secondary"
              >YouTube Profile</a
            >
          </div>
        </div>

        <a href="/about" class="nav-btn"> About</a>

        <a href="/blog" class="nav-btn"> Blog</a>
      </div>
    </div>
  </nav>
</div>

<script></script>
