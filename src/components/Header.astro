---
import logo from "../images/monkey-business.png";
import { Image } from 'astro:assets';
---

<header class="header">
  <link
    href="https://fonts.googleapis.com/css?family=Arvo&display=swap"
    rel="stylesheet"
  />

  <div class="container">
    <div class="image-container">
      <a href="index.html">
        <img
          width="75"
          height="75"
          src="https://img.icons8.com/nolan/96/year-of-monkey.png"
          alt="year-of-monkey"
        />
        <Image class="title" alt="logo-title" src={logo} />
      </a>
    </div>

    <div class="dropdown" style="max-width: 700px; margin: 0 auto">
      <nav role="navigation" class="primary-navigation">
        <ul>
          <li><a href="/">Home</a></li>
          <li>
            <a href="#">Games &dtrif;</a>
            <ul class="dropdown">
              <li>
                <a
                  href="/game?search=https://64e50a20839a9019d51bb911--delicate-belekoy-4e9031.netlify.app/"
                  >Balls of Steel</a
                >
              </li>
              <li>
                <a
                  href="/game?search=https://64e88ff4dd8a1c0a6a4fb402--wondrous-cajeta-945cf0.netlify.app/"
                  >Clicky Crates</a
                >
              </li>
            </ul>
          </li>
          <li>
            <a href="#">Tools &dtrif;</a>
            <ul class="dropdown">
              <li><a href="/to-do-list">To Do List</a></li>
              <li>
                <a href="/habit-tracker">Habit Tracker</a>
              </li>
              <li>
                <a href="/weather-app">Weather App</a>
              </li>
              
            </ul>
          </li>

          <li><a href="/about">About</a></li>
          <li><a href="/blog">Blog</a></li>
        </ul>
      </nav>
    </div>
  </div>
</header>

<style>
  .image-container {
    text-align: center; /* Optional: Center the images horizontally */
  }

  .image-container img {
    display: inline-block;
    margin-right: 10px; /* Add spacing between the images */
  }

  nav.primary-navigation {
    margin: 0 auto;
    display: block;
    text-align: center;
    font-size: 16px;
    margin-right: 0px;
  }

  nav.primary-navigation ul li {
    list-style: none;
    margin: 0 auto;
    border-left: 2px solid #72008f;
    display: inline-block;
    padding: 0 30px;
    position: relative;
    text-decoration: none;
    text-align: center;
  }

  nav.primary-navigation ul li a {
    color: black;
  }

  nav.primary-navigation ul li a:hover {
    color: #8e00cf;
  }

  nav.primary-navigation ul li:hover {
    cursor: pointer;
  }

  nav.primary-navigation ul li ul {
    visibility: hidden;
    opacity: 0;
    position: absolute;
    padding-left: 0;
    left: 0;
    display: none;
    background: rgb(58, 0, 97);
  }

  nav.primary-navigation ul li:hover > ul,
  nav.primary-navigation ul li ul:hover {
    visibility: visible;
    opacity: 1;
    display: block;
    min-width: 200px;
    text-align: left;
    padding-top: 20px;
    box-shadow: 0px 3px 5px -1px #000000;
  }

  nav.primary-navigation ul li ul li {
    clear: both;
    width: 100%;
    text-align: left;
    margin-bottom: 20px;
    border-style: none;
  }

  nav.primary-navigation ul li ul li a:hover {
    padding-left: 10px;
    border-left: 2px solid #3ca0e7;
    transition: all 0.3s ease;
  }

  a {
    text-decoration: none;
  }

  a:hover {
    color: #3ca0e7;
  }

  nav.primary-navigation ul li ul li a {
    transition: all 0.5s ease;
  }

  .header nav ul {
    display: flex;
  }

  .header nav ul li {
    padding: 0 10px;
  }

  .header nav ul li a {
    color: #fff;
  }

  .header .container {
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 20px;
  }

  .header .container {
    grid-gap: 20px;
    padding: 0 20px;
  }

  @media (max-width: 930px) {
    .header .container {
      grid-template-columns: 1fr;
      display: grid;
    }
  }

  .header {
    height: 100px;
    background: var(--color-primary);
  }

  @media (max-width: 931px) {
    .header {
      height: 175px;
    }
  }

  @media (max-width: 542px) {
    .header {
      height: 175px;
    }
    .icon {
      margin: auto;
    }
  }

  @media (max-width: 541px) {
    .header .container .logo {
      display: flex;
      justify-content: center;
    }
  }

  .header img {
    vertical-align: middle;
    margin-top: 0px;
  }
</style>
