---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import axios from "axios";
import { markdownToHtml } from "../utils/markdownToHtml.js";

export async function getStaticPaths() {
  try {
    const response = await axios.get("http://localhost:8055/items/posts");
    const paths = response.data.data.map((post) => ({
      params: {
        slug: post.slug,
      },
      props: {
        post,
      },
    }));
    return paths;
  } catch (error) {
    console.error("Error fetching posts for static paths:", error);
    return [];
  }
}

const { post } = Astro.props;
const htmlContent = markdownToHtml(post.post);

export const prerender = true;
---

<Layout title={post?.title}>
  {
    post && (
      <section class="page-content">
        <div class="container">
          <Card>
            <div transition:name={`post-button-${post.slug}`}>
              <a class="btn-white-bg" href="/blog">
                Go Back
              </a>
            </div>

            <div transition:name={`post-header-${post.slug}`}>
              <h2 class="py-6 text-2xl font-bold leading-10 text-center md:text-4xl md:leading-[3rem]">
                {post.title}
              </h2>
            </div>

            <div transition:name={`post-author-${post.slug}`}>
              <i>
                Written by <strong> {post.author}</strong> on
                {new Date(post.date).toLocaleDateString()}
              </i>
            </div>

            <div class="py-6" transition:name={`post-body-${post.slug}`}>
              <span set:html={htmlContent} />
            </div>
          </Card>
        </div>
      </section>
    )
  }
</Layout>
